<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="invoice_form_payment_mean" model="ir.ui.view">
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_payment_term_id']" position="after">
                    <field name="payment_mean_id"
                        options="{'no_create': True}"
                    />
                     <field name="payment_mean_code_id"
                        options="{'no_create': True}"
                        attrs="{'invisible': [('type', '!=', 'out_invoice')],'!required': [('type', '!=', 'out_invoice')]}"
                     />
                </xpath>
            </field>
        </record>
    </data>
</odoo>