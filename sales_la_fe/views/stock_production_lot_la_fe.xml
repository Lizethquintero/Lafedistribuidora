<odoo>
    <data>
        <record id="sales_la_fe_stock_production_lot" model="ir.ui.view">
            <field name="name">sales.la.fe.stock.production.lot</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <!--<field name="priority">15</field>-->
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="use_date"/>
                    <field name="removal_date"/>
                    <field name="life_date"/>
                    <field name="alert_date"/>
                </xpath>
            </field>
        </record>
        <record id="sales_la_fe_stock_landed_cost" model="ir.ui.view">
            <field name="name">sales.la.fe.stock.landed.cost</field>
            <field name="model">stock.landed.cost</field>
            <field name="inherit_id" ref="stock_landed_costs.view_stock_landed_cost_form"/>
            
            <field name="arch" type="xml">
               <xpath expr="//form[1]/sheet[1]/notebook[1]/page[2]/field[@name='valuation_adjustment_lines']/tree[1]/field[@name='quantity']" position="after">
    <field name="cost_per_unit"/>
  </xpath> 
            </field>
        </record>
    </data>
</odoo>