<odoo>
    <data>
        <record id="product_template_sales_la_fe_form" model="ir.ui.view">
            <field name="name">product.template.sales.la.fe.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.view_template_property_form"/>
            <field name="priority">15</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='route_ids']" position="after">
                    
                    <field name="rack" />
                    <field name="file" />
                    <field name="case" />
                    
                </xpath>
            </field>
        </record>
        
        <record id="product_template_sales_la_fe_kanban" model="ir.ui.view">
            <field name="name">product.template.sales.la.fe.kanban</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>
            <field name="arch" type="xml">
            <xpath expr="//field[@name='lst_price']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
                <!--/html/body/div[2]/div/div[2]/div/div[1]/div[2]/ul/li[1]-->
            <xpath expr="//ul/li[1]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//kanban" position="inside">
                    <field name="type"/>
                </xpath>
                <ul position="inside">
                    <li t-if="record.type.raw_value == 'product'">Proyectada: <field name="virtual_available"/> <field name="uom_id"/></li>
                </ul>
               <ul position="inside">
                    <li t-if="record.type.raw_value == 'product'">Entrantes: <field name="purchase_product_qty"/> <field name="uom_id"/></li>
                </ul>
                <ul position="inside">
                    <li t-if="record.type.raw_value == 'product'">Salientes: <field name="sales_counts"/> <field name="uom_id"/></li>
                </ul>
        </field>
    </record>
    </data>
</odoo>