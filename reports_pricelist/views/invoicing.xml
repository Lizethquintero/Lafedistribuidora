<odoo>
    <data>
        <record id="report_invoicing_wizard" model="ir.ui.view">
            <field name="name">report.invoicing.wizard.wizard.form</field>
            <field name="model">report.invoicing.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="type"/>
                        <field name="detailed"/>
                    </group>
                    <notebook>
                        <page string="Partner">
                            <field name="partner_ids"/>
                        </page>
                    </notebook>
                    <footer>
                        <div>
                            <button name="generate_excel" string="Generate XLSX" type="object" default_focus="1"
                                    class="oe_highlight"/>
                            <button name="generate_pdf" string="Generate PDF" type="object"
                                    class="oe_highlight"/>
                            <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                        </div>
                    </footer>
                </form>
            </field>
        </record>

        <record id="report_invoicing_action" model="ir.actions.act_window">
            <field name="name">Report invoicing wizard</field>
            <field name="res_model">report.invoicing.wizard</field>
            <!-- <field name="view_type">form</field> -->
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem action="report_invoicing_action" name="Report invoicing"
                  id="menu_report_invoicing"
                  parent="account.menu_finance_reports" sequence="110"
                  groups="reports.group_invoicing_report"/>
    </data>
</odoo>