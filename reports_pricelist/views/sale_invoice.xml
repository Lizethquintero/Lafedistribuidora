<odoo>
    <data>
        <record id="report_sale_invoice_wizard" model="ir.ui.view">
            <field name="name">report.sale.invoice.wizard.wizard.form</field>
            <field name="model">report.sale.invoice.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <footer>
                        <div>
                            <button name="generate_excel" string="Generate XLSX" type="object" default_focus="1"
                                    class="oe_highlight"/>
                            <button name="generate_pdf" string="Generate PDF" type="object"
                                    class="oe_highlight"/>
                            <button name="generate_pivot" string="Generate Pivot" type="object"
                                    class="oe_highlight"/>
                            <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                        </div>
                    </footer>
                </form>
            </field>
        </record>

        <record id="report_sale_invoice_action" model="ir.actions.act_window">
            <field name="name">Report sale.invoice wizard</field>
            <field name="res_model">report.sale.invoice.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem action="report_sale_invoice_action" name="Report sale"
                  id="menu_report_sale_invoice"
                  parent="account.menu_finance_legal_statement" sequence="120"
                  groups="reports.group_sales_report"/>

        <record id="report_sale_invoice_pivot" model="ir.ui.view">
            <field name="name">report.sale.invoice.line</field>
            <field name="model">report.sale.invoice.line</field>
            <field name="arch" type="xml">
                <pivot string="Sale invoice">
                    <field name="partner_id"/>
                    <field name="period" type="col"/>
                    <field name="amount_invoiced" type="measure"/>
                    <field name="amount_collect" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="report_sale_invoice_pivot_action" model="ir.actions.act_window">
            <field name="name">Sale invoice</field>
            <field name="res_model">report.sale.invoice.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">pivot</field>
        </record>
    </data>
</odoo>