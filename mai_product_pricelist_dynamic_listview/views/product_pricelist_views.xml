<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_product_pricelist_pl_form_inherit_re" model="ir.ui.view">
        <field name="name">product.pricelist.form.pl</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="allow_in_product_view" groups="mai_product_pricelist_dynamic_listview.group_product_pricelist"/>
            </xpath>
        </field>
    </record>

    <record id="view_product_pricelist_pl_tree_inherit_re" model="ir.ui.view">
        <field name="name">product.pricelist.tree.pl</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="allow_in_product_view" groups="mai_product_pricelist_dynamic_listview.group_product_pricelist"/>
            </xpath>
        </field>
    </record>

</odoo>