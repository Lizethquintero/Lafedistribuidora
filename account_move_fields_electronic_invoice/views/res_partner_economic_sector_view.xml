<odoo>
    <data>
        <record id="acount_move_line_fields_electronic_invoice" model="ir.ui.view">
            <field name="name">acount.move.line.fields.electronic.invoice</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority">15</field>
            <field name="arch" type="xml">
                <!--<xpath expr="//page[@name='Invoice Lines']" position="after">
                    <field name="sector_id"/>
                </xpath>-->
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="method_la_fe_id"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="delivery_adress_shipping"/>
                    <field name="zip_shipping_id"/>
                </xpath>

                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="before">
                    <field name="x_cum" optional="hide" force_save="1"/>
                    <field name="x_invima" optional="hide" force_save="1"/>
                    <field name="x_atc" optional="hide" force_save="1"/>
                    <field name="removal_date" optional="hide" force_save="1"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']/tree/field[@name='payment_id']" position="after">
                    <field name="x_cum" invisible="1" force_save="1"/>
                    <field name="x_invima" invisible="1" force_save="1"/>
                    <field name="x_atc" invisible="1" force_save="1"/>
                    <field name="removal_date" invisible="1" force_save="1"/>
                </xpath>
            </field>
        </record>
    </data>
