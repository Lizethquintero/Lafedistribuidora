        <record id="account_payment_register_inherit" model="ir.ui.view">
            <field name="name">account.payment.register.inherit</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_form_multi"/>
            <field name="arch" type="xml">
                <xpath expr="//form/group/group[2]/field[@name='payment_date']" position="after">
                    <field name="invoice_ids" invisible="True"/>
                    <field name="import_total"/>
                </xpath>
            </field>
        </record>
    </data>
