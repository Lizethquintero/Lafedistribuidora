<odoo>
    <data>
        <record id="acount_move_line_fields_electronic_invoice" model="ir.ui.view">
            <field name="name">acount.move.line.fields.electronic.invoice</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority">15</field>
            <field name="arch" type="xml">
                <!--<xpath expr="//page[@name='Invoice Lines']" position="after">
                    <field name="sector_id"/>
                </xpath>-->
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="method_la_fe_id"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="delivery_adress_shipping"/>
                    <field name="zip_shipping_id"/>
                </xpath>
            </field>
        </record>
    </data>
    <data>
        <record id="acount_move_line_fields_electronic_invoice" model="ir.ui.view">
            <field name="name">acount.move.line.fields.electronic.invoice</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority">15</field>
            <field name="arch" type="xml">
                <!--<xpath expr="//page[@name='Invoice Lines']" position="after">
                    <field name="sector_id"/>
                </xpath>-->
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="method_la_fe_id"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="delivery_adress_shipping"/>
                    <field name="zip_shipping_id"/>
                </xpath>
            </field>
        </record>
        
        <record id="acount_payment_register_inherit" model="ir.ui.view">
            <field name="name">acount.payment.register.inherit</field>
            <field name="model">acount.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_form_multi"/>
            <field name="arch" type="xml">
                <xpath expr="//form/group/group[2]/field[@name='payment_date']" position="after">
                    <field name="invoice_ids" invisible="True"/>
                    <field name="import_total"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
